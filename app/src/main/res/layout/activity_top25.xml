<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_coffeebar_background"
    tools:context=".level3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#95FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top25_name_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:fontFamily="@font/abhayalibre_extrabold"
                android:text="Name: " />

            <EditText
                android:id="@+id/top25_name_enter"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/abhayalibre_extrabold"
                android:hint="Xxx Xxx Xxx" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top25_score_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:fontFamily="@font/abhayalibre_extrabold"
                android:text="Score: " />

            <TextView
                android:id="@+id/top25_score"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:fontFamily="@font/abhayalibre_extrabold"
                android:text="000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/top25_cancelbutton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/abhayalibre_extrabold"
                android:background="#8A624A"
                android:textColor="#F2B195"
                android:layout_marginRight="30dp"
                android:text="Cancel" />

            <Button
                android:id="@+id/top25_savebutton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/abhayalibre_extrabold"
                android:background="#8A624A"
                android:textColor="#98FB98"
                android:layout_marginLeft="30dp"
                android:text="Confirm" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>